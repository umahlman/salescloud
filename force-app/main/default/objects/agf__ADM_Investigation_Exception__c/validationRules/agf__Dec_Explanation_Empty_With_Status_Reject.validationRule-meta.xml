<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>agf__Dec_Explanation_Empty_With_Status_Reject</fullName>
    <active>true</active>
    <errorConditionFormula>AND(CASE( agf__Status__c,
&quot;Rejected&quot;, 1,
