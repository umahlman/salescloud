<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>agf__Verify_length_of_sprint</fullName>
    <active>true</active>
    <description>make sure sprint length is &lt;= 31</description>
    <errorConditionFormula>(agf__End_Date__c - agf__Start_Date__c) &gt; 31</errorConditionFormula>
    <errorDisplayField>agf__End_Date__c</errorDisplayField>
    <errorMessage>A sprint can&apos;t be longer than one month (31 days). Please correct your end date and click &apos;Save&apos;.</errorMessage>
</ValidationRule>
